{
  "name": "task-runners",
  "version": "1.0.0",
  "description": "Using uglify and postCSS to build optimal code",
  "main": "index.js",
  "scripts": {
    "test": "",
    "sass": "node-sass src/scss/style.scss -o src/css/",
    "postcss": "postcss src/scss/style.scss -c postcss.config.js -o dist/css/style.css",
    "build:css": "postcss src/css/style.css -c postcss.config.js | hashmark --name style.css -l 8 -m assets.json \"dist/css/{name}.{hash}{ext}\"",
    "clean:css": "rimraf dist/css/*",
    "clean:js": "rimraf dist/js/*",
    "clean:img": "rimraf dist/img/*",
    "clean:all": "rimraf dist",
    "preimagemin": "npm run clean:img",
    "imagemin": "imagemin src/img/* | hashmark --name logo.png -l 0 -m assets.json \"dist/img/{name}{ext}\"",
    "dev:main": "browserify main.js --outfile dist/js/main.js",
    "dev:js": "browserify index.js -t babelify --outfile dist/js/index.js",
    "prod:js": "browserify index.js -t babelify | uglifyjs -c drop_console -o dist/js/index.js",
    "hash:js": "hashmark dist/js/index.js -m manifest.js.json -l 8  \"dist/js/index.{hash}.js\"",
    "build:js": "browserify index.js -t babelify | uglifyjs -c drop_console | hashmark --name code.js --silent --length 8 --asset-map assets.json \"dist/js/{name}.{hash}{ext}\"",
    "test:build": "node build.js"
  },
  "author": "Lluis Camps",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "autoprefixer": "^9.7.6",
    "babel-core": "^6.26.3",
    "babelify": "^10.0.0",
    "browserify": "^16.5.1",
    "concat": "^1.0.3",
    "cssnano": "^4.1.10",
    "hashmark": "^5.0.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "postcss": "^7.0.30",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^7.1.1",
    "postcss-gradient-transparency-fix": "^3.0.0",
    "postcss-hash": "^2.0.0",
    "postcss-node-sass": "^2.1.8",
    "postcss-preset-env": "^6.7.0",
    "postcss-scss": "^2.0.0",
    "rimraf": "^3.0.2",
    "uglify-js": "^3.9.3"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "core-js": "^3.6.5",
    "imagemin-cli": "^5.1.0",
    "jquery": "^3.5.1"
  }
}
