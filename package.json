{
  "name": "task-runners",
  "version": "1.0.0",
  "description": "Using uglify and postCSS to build optimal code",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass": "node-sass src/scss/style.scss -o src/css/",
    "postcss": "postcss src/css/style.css -c postcss.config.js -o dist/css/",
    "build-style": "npm run sass && npm run postcss",
    "build-css": "postcss src/scss/style.scss -c postcss.config.js -o dist/css/",
    "clean:css": "rimraf dist/css/*",
    "clean:js": "rimraf dist/js/*",
    "clean:img": "rimraf dist/img/*",
    "clean:all": "rimraf dist",
    "imagemin": "imagemin src/img/* -o dist/img",
    "dev:js": "browserify index.js -t babelify --outfile dist/js/index.js",
    "prod:js": "browserify index.js -t babelify | uglifyjs -c drop_console -o dist/js/index.js"
  },
  "author": "Lluis Camps",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "autoprefixer": "^9.7.6",
    "babel-core": "^6.26.3",
    "babelify": "^10.0.0",
    "browserify": "^16.5.1",
    "cssnano": "^4.1.10",
    "hashmark": "^5.0.0",
    "node-sass": "^4.14.1",
    "postcss": "^7.0.30",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^7.1.1",
    "postcss-gradient-transparency-fix": "^3.0.0",
    "postcss-hash": "^2.0.0",
    "postcss-node-sass": "^2.1.8",
    "postcss-preset-env": "^6.7.0",
    "postcss-scss": "^2.0.0",
    "rimraf": "^3.0.2",
    "uglify-js": "^3.9.3"
  },
  "dependencies": {
    "imagemin-cli": "^5.1.0",
    "jquery": "^3.5.1"
  }
}
